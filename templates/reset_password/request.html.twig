{% extends 'base.html.twig' %}

{% block title %}Reset your password <br> Reinicio de la clave{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="bg-light mt-2 my-4 mx-auto p-5 border w-50 col-6 offset-3">
        <h1>Reset your password <br> Restablecer la clave</h1>
    	<p>Enter your email address and we will send you a
                    link to reset your password.<br>
            Introduce tu e-mail y te enviaremos un enlace para restablecer tu clave</p>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
           		<div class="mt-3 text-center">       			
       				<button class="btn btn-primary">Restablecer la clave</button>
            	</div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
